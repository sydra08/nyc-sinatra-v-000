<h1>Add a new historical figure</h1>
<form action="/figures" method="post">
  <label><strong>Name: </strong></label><input id ="figure_name" type="text" name="figure[name]">

  <br></br>

  <label><strong>Choose an existing title:</strong></label>
  <br>
  <%Title.all.each do |t|%>
  <input id="title_<%=t.id%>" type="checkbox" name="figure[title_ids][]" value="<%=t.id%>"><%=t.name%>
  <%end%>

  <br></br>
  <label><strong>and/or, create a new title:</strong>
  </label><input  id="new_title" type="text" name="title[name]">

  <br></br>

  <label><strong>Choose an existing landmark:</strong></label>
  <br>
  <%Landmark.all.each do |l|%>
  <input id="landmark_<%=l.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=l.id%>"><%=l.name%>
  <%end%>

  <br></br>

  <label><strong>and/or, create a new landmark:</strong></label><input id="new_landmark" type="text" name="landmark[name]">

  <br></br>


  <input type="submit" value="Create New Figure">
</form>
